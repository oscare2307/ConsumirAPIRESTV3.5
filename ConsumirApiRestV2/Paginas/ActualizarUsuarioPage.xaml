<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsumirApiRestV2.Paginas.ActualizarUsuarioPage"
             Title="Actualizar Usuario">
    <VerticalStackLayout Padding="25">

        <Label Text="ID de Usuario:" />
        <Entry x:Name="EntryUserId" Placeholder="Ingrese el ID de usuario" />

        <Label Text="Nuevo Email:" />
        <Entry x:Name="EntryEmail" Placeholder="Ingrese el nuevo email" />

        <Label Text="Nuevo Nombre:" />
        <Entry x:Name="EntryName" Placeholder="Ingrese el nuevo nombre" />

        <Button Text="Actualizar"  Clicked="Button_Clicked" BackgroundColor="#8fff2b" TextColor="White"  Margin="0,20,0,0" />
        
    </VerticalStackLayout>
</ContentPage>