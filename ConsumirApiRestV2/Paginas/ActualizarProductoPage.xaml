<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsumirApiRestV2.Paginas.ActualizarProductoPage"
             Title="Actualizar Producto">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label Text="ID del Producto" />
        <Entry x:Name="EntryProductId" Placeholder="ID del Producto" />

        <Label Text="Nuevo Título" />
        <Entry x:Name="EntryTitulo" Placeholder="Nuevo Título" />

        <Label Text="Nuevo Precio" />
        <Entry x:Name="EntryPrecio" Placeholder="Nuevo Precio" />

        <Button Text="Actualizar" Clicked="Button_Clicked" VerticalOptions="Center" BackgroundColor="#8fff2b" TextColor="White"  Margin="0,20,0,0"/> 

    </VerticalStackLayout>
</ContentPage>