<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsumirApiRestV2.Paginas.ConsultarCategoriaPage"
             Title="Consultar Categoria">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Label 
            Text="Consultar Categoria"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image x:Name="Img" HeightRequest="200" WidthRequest="200" />
        <Label Text="Ingrese el código de la categoría" />
        <Entry x:Name="EntryCodigoCategoria" Placeholder="Código de la categoría" />
        <Label Text="Nombre de la categoría" />
        <Entry x:Name="EntryTituloProducto" IsReadOnly="True" />
        <Button Text="Consultar" Clicked="Button_Clicked"  BackgroundColor="#0000ff" TextColor="White"  Margin="0,20,0,0"/>
       
    
    </VerticalStackLayout>
</ContentPage>