<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsumirApiRestV2.Paginas.EliminarProducto"
             Title="Eliminar Producto">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        
        <Label Text="Ingrese el ID del producto a eliminar" />
        <Entry x:Name="EntryProductId" Placeholder="ID del producto" />
        <Button Text="Eliminar Producto" Clicked="Button_Clicked" BackgroundColor="#f44336" TextColor="White"  Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>