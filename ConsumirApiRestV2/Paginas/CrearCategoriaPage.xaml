<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsumirApiRestV2.Paginas.CrearCategoriaPage"
             Title="Crear Categoria">
    <VerticalStackLayout 
        Padding="20">

        <Label Text="Nombre de la Categoría" />
        <Entry x:Name="EntryNombre" Placeholder="Ingrese el nombre de la categoría" />

        <Label Text="URL de la Imagen" />
        <Entry x:Name="EntryImagen" Placeholder="Ingrese la URL de la imagen" />

        <Button Text="Crear Categoría"  Clicked="Button_Clicked" VerticalOptions="Center" BackgroundColor="#FF8000" TextColor="White"  Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>