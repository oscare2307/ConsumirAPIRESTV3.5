<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsumirApiRestV2.Paginas.ConsultarUsuariosPage"
             Title="Consultar Usuarios">
    <VerticalStackLayout Padding="35,0">
        
        <Label Text="Ingrese el código del usuario" VerticalOptions="Center"/>
        <Entry x:Name="EntryCodigoUsuario" Placeholder="Código del usuario" />
        <Button Text="Consultar" Clicked="Button_Clicked"  BackgroundColor="#0000ff" TextColor="White" Margin="0,20,0,0"/>

        <Label Text="Detalles del Usuario" FontAttributes="Bold" Margin="0,20,0,10" />
        <Image x:Name="ImgAvatar" HeightRequest="200" WidthRequest="200" />
        <Label Text="Nombre:" VerticalOptions="Center"/>
        <Entry x:Name="EntryNombreUsuario" IsReadOnly="True" />

        <Label Text="Email:" VerticalOptions="Center"/>
        <Entry x:Name="EntryEmailUsuario" IsReadOnly="True" />

        <Label Text="Rol:" VerticalOptions="Center"/>
        <Entry x:Name="EntryRolUsuario" IsReadOnly="True" />

    </VerticalStackLayout>
</ContentPage>